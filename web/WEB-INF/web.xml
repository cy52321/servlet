        <servlet-name>find</servlet-name>
        <url-pattern>/user/find</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>com.a1.UserDelete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/user/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>qdelete</servlet-name>
        <servlet-class>com.a1.QuestionDelete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>qdelete</servlet-name>
        <url-pattern>/questiondelete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>qtest</servlet-name>
