    <servlet-class>com.a1.QuestionFindid</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>qfi</servlet-name>
        <url-pattern>/questionfindid</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>qc</servlet-name>
        <servlet-class>com.a1.QuestionCheck</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>qc</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>questionf</servlet-name>
        <servlet-class>com.a1.QuestionFind</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>questionf</servlet-name>
        <url-pattern>/questionfind</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>questionadd</servlet-name>
        <servlet-class>com.a1.QuestionAdd</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>questionadd</servlet-name>
        <url-pattern>/questionins</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.a1.Userlogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/user/login</url-pattern>
