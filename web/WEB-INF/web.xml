    </servlet>
    <servlet-mapping>
        <servlet-name>qtest</servlet-name>
        <url-pattern>/questiontest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>qupdate</servlet-name>
        <servlet-class>com.a1.QuestionUpdate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>qupdate</servlet-name>
        <url-pattern>/questionupdate</url-pattern>
    </servlet-mapping>

    <servlet>
